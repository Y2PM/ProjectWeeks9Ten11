@{ViewBag.Title = "Basket price page.";}

<div class="jumbotron">
    <h2>@ViewBag.Title</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Here the price of all database items is summed and displayed.</h2>
        <p>
            As the database items are added to and removed, you can come back here to see the total price.
        </p>
        @using (Ajax.BeginForm(new AjaxOptions{HttpMethod = "GET",UpdateTargetId = "div1",InsertionMode = InsertionMode.Replace}))
        {
            <input type="submit" value="Get price total" />
        }
        <div id="div1">
        </div>
    </div>
</div>
